<div class="container" style="padding-top: 10px;">
  <div class="row ownerprofhead">
    <div class="col-sm-12"></div>
    <h1 class="text-center">Owner's profile</h1>

    <div class="col-sm-6"><%= cl_image_tag @user.photo, class: "thumbnail-small" %></div>
    <div class="col-sm-6"><p><%= @user.first_name %> <%= @user.last_name %></p></div>

     </div>
  </div>
</div>

<div class="container" style="padding-top: 10px;">
  <div class="row ownerprofbody">
    <div class="col-sm-12">
    <% if @user.assets.size == 0 %>
      <h2> Sorry, <%= @user.first_name %> has no assets for sale! </h2>
    <% else %>
      <h2> <%= @user.first_name %> has <%= @user.assets.size %> assets for sale.</h2>
      <h3> <%= link_to('Check them out!', user_assets_path(user_id: @user.id), class: "navbar-wagon-item navbar-findaroof-link")%>
    <% end %>
    </div>
  </div>
</div>

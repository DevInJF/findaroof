<h1 class="text-center">Assets For Sale</h1>

 <%= form_tag "/admin/assets", method: :get, remote: true, class: 'findaroof-form-group' do  %>
      <%= label_tag('Price') %>
      <%= number_field_tag(:query_price_min, nil, placeholder: "min", class: 'findaroof-filter-form')%>
      <%= number_field_tag(:query_price_max, nil, placeholder: "max", class: 'findaroof-filter-form')%>
      <%= label_tag('Address') %>
      <%= text_field(:asset, :address, placeholder: "Enter the address", class: 'findaroof-filter-form')%>
      <%= label_tag('Radius') %>
      <!-- # text_field_tag(:query_radius, nil, placeholder: "Enter the search radius - format '10mi' or '10km'", class: 'findaroof-filter-form') -->
      <%= label_tag('City') %>
      <%= select_tag('city', options_for_select(@assets.collect{ |a| [a.city, a.id] }), :prompt => "Please select city", class: 'findaroof-filter-dropdown')%>
      <%= label_tag('Country') %>
      <%= select_tag('country', options_for_select(@assets.collect{ |a| [a.country, a.id] }), :prompt => "Please select country",  class: 'findaroof-filter-dropdown')%>
      <%= submit_tag("Search", class: 'findaroof-button')%>
  <% end %>



 <div id="results"><%= render 'assets' %></div>



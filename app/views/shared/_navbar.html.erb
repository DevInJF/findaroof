  <!-- Right Navigation -->
  <div class="navbar-findaroof-right hidden-xs hidden-sm">

      <!-- Text link -->
      <%= link_to('Sign-up', new_user_registration_path, class: "navbar-wagon-item navbar-findaroof-link") %>


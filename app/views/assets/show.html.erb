<div class="container">
  <div class="row">
    <div class="col-sm-8" data-id="<%=@asset.id%>" data-longitude="<%= @asset.longitude %>" data-latitude="<%= @asset.latitude %>">
      <h1>
        <%= @asset.title %>
        <% if current_user %>
          <% if current_user.id == @asset.user.id %>
            <small>from <%= link_to @asset.user.first_name, user_path(id: @asset.user.id) %></small>
          <% end %>
        <% end %>
      </h1>
      <h6>On Findaroof for <%= time_ago_in_words @asset.created_at %></h6>
      <div class="row">
        <div class="col-sm-6">
          <p><%= @asset.address %></p>
          <p><%= @asset.city %> - <%= @asset.country %></p>
          <p><%= @asset.region %></p>
        </div>
        <div class="col-sm-6">
          <p><%= @asset.description %></p>
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <h1>US$<%= @asset.price%></h1>
      <ul class="list-unstyled">
        <% if !current_user %>
          <li><%= link_to "Make Offer", new_user_registration_path, {class: "btn btn-lg btn-pricing btn-info"} %></li>
          <% if current_user.id == @asset.user.id %>
            <li><%= link_to "Edit Asset", edit_user_asset_path(user_id: @user.id), {class: "btn btn-lg btn-pricing btn-primary"} %></li>
            <li><%= link_to "Delete Asset", user_asset_path(user_id: @user.id), class: "btn btn-lg btn-pricing btn-danger", method: :delete %></li>
          <% else %>
            <li><%= link_to "Make Offer", new_user_asset_offer_path(asset_id: @asset.id), {class: "btn btn-lg btn-pricing btn-info"} %></li>
            <li><%= link_to "Book an appointment", new_user_asset_appointment_path(asset_id: @asset.id), {class: "btn btn-lg btn-pricing btn-primary"} %></li>
          <% end %>
        <% else %>
            <div class="popup-gallery">
              <% @asset.asset_photos.each do |photo|%>
                <%= link_to asset_path(photo.photo.url) do %>
                <% cl_image_tag photo.photo, width: '300px', height: '250px'%>
                <% end %>
              <% end %>

            </div>
          <h1><% @asset.title %></h1>
          <h3 class="showcard-user">from <%= @asset.user.first_name %></h3>
          <p class="showcard-description">US$<%= @asset.price %></p>
          <p class="showcard-region" ><%= @asset.address %> - - <%= @asset.city %></p>
          <p class="showcard-action">Want to make offers for houses like this?<%= link_to "Sign up today!", new_user_registration_path, {class: "btn btn-primary"} %></p>
        <% end %>
      </div>
      </ul>
    </div>
  </div>
  <%= render "popup_gallery" %>

  <div class="row">
    <div class="col-sm-12">
      <form role="form">
        <h3>Contact the owner of <%= @asset.title %></h3>
        <div class="form-group">
          <input type="text" class="form-control" id="subject" name="subject" placeholder="Proposition for your house US$<%= @asset.price%> " disabled>
        </div>

        <div class="form-group">
          <textarea class="form-control" type="textarea" id="message" placeholder="Hello <%= @asset.user.first_name %> <%= @asset.user.last_name %>" maxlength="140" rows="7"></textarea>
        </div>
        <button type="button" id="submit" name="submit" class="btn btn-lg btn-primary pull-right">Send a message</button>
      </form>
    </div>
  </div>

   <div class="individual-map">
        <div id="individual-map" style="min-width: 100%; height: 400px;"></div>
                          <% content_for(:after_js) do %>
                           <script>
                           // console.log(markers);
                            $(document).ready(function() {
                              initMapIndividual(getOneMarker());
                            });
                            // console.log(markers);
                            // });
                            </script>
                          <% end %>
      </div>
</div>

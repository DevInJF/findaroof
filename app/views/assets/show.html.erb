
<div class="showcard" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://lorempixel.com/800/800');">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <ul>
          <h1><%= @asset.title %></h1>
          <p>US$<%= @asset.price * 1000%></p>
           <p><%= @asset.address %> - <%= @asset.city %> - <%= @asset.country %></p>
           <p><%= @asset.region %></p>

        </ul>
      </div>
    </div>
  </div>
</div>

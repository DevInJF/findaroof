<% if current_user %>
  <div class="container user-assets-container">
    <div class="col-lg-12 user-assets-title">
    <h1 class="findaroof-title"> All assets</h1>
     <p class="text-center"><%= link_to "Add a new asset", new_user_asset_path, {class: "findaroof-btn"} %></p>
    </div>
  </div>

    <div class="container user-assets-container">
      <div class="col-lg-12 user-assets-title">
        <h1 class="findaroof-title">All assets for sale</h1>
        <% @assets.each do |ass| %>
          <div class="col-lg-4 col-md-6 col-xs-12 user-assets-col">
          <%= render "asset", asset: ass %>
          </div>
      </div>
        <% end %>
    </div>

  <div class="container user-assets-container">
    <div class="col-lg-12 user-assets-title">
      <h1 class="findaroof-title">All favorite assets</h1>
        <% @user.favorites.each do |fav| %>
          <div class="col-lg-4 col-md-6 col-xs-12 user-assets-col">
          <%= render "asset_fav", fav: fav %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>



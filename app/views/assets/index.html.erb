<% if current_user %>
  <div class="container user-assets-container">
    <div class="col-lg-12 user-assets-title">
    <h1 class="findaroof-title"> All assets</h1>
     <div class="container">
  <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add an Asset</button>
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"></h4>
        </div>
        <div class="modal-body">

        </div>
        <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
    </div>
  </div>

    <div class="container user-assets-container">
      <div class="col-lg-12 user-assets-title">
        <h1 class="findaroof-title">All assets for sale</h1>
      </div>
        <% @assets.each do |ass| %>
          <div class="col-lg-4 col-md-6 col-xs-12 user-assets-col">
          <%= render "asset", asset: ass %>
          </div>
        <% end %>
    </div>

  <div class="container user-assets-container">
    <div class="col-lg-12 user-assets-title">
      <h1 class="findaroof-title">All favorite assets</h1>
    </div>
        <% @user.favorites.each do |fav| %>
          <div class="col-lg-4 col-md-6 col-xs-12 user-assets-col">
          <%= render "asset_fav", fav: fav %>
        </div>
      <% end %>
    </div>
<% end %>



<h1 class="text-center"> All My Appointments</h1>
  <div class="container">
    <div class="row">
      <%= month_calendar events: @appointments do |date, appointments| %>
        <h4><%= date %></h4>
        <% appointments.each do |appointment| %>

                <h6><%= appointment.asset.user.first_name %> for <%= appointment.asset.title %></h6>
                <h6><%= appointment.time %></h6>
                <%= link_to 'See more', edit_user_asset_appointment_path( appointment.user, appointment.asset, appointment) %>

        <% end %>
      <% end %>
      </div>
    </div>

<% if @assets_appointments.size > 0 %>
<h1 class="text-center">All appointment requests</h1>
  <% @assets_appointments.each do |appointments| %>
    <% appointments.each do |app| %>
      <div class="container">
        <div class="row">
        <% if app.status == "pending" %>
          <div class="col-xs-12 col-sm-4 smallercard wells" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://lorempixel.com/500/500/sports');">
              <h3>Request from <%= app.user.first_name %> for <%= app.asset.title %></h3>
              <p>Date: <%= app.date %></p>
              <p><%= link_to 'Accept this request', edit_user_asset_appointment_path( app.user, app.asset, app) %>
              </div>
            <% elsif app.status == "Accept" %>

            <% else %>
              <% app.delete %>
            <% end %>

        </div>
      </div>
    <% end %>
  <% end %>
<% end %>


<h1 class="text-center"> All My Appointments</h1>
  <div class="container">
    <div class="row">
    <%= month_calendar events: @appointments do |date, appointments| %>
      <% appointments.each do |appointment| %>
      <div class="container">
        <div class="row">
        <h4><%= appointment.date %></h4>
          <div class="col-xs-12 col-sm-4 smallercard" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://lorempixel.com/400/400/sports');">
              <h4>You have arranged an appointment with <%= appointment.asset.user.first_name %> for <%= appointment.asset.title %></h4>
              <h4><%= appointment.time %></h4>
              <%= link_to 'See more', edit_user_asset_appointment_path( appointment.user, appointment.asset, appointment) %>
          </div>
        </div>
      </div>
    <% end %>
    <% end %>
  </div>


<div class="container" >
 <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i> My Appointments
        <div class="pull-right">
          <div class="btn-group">
            <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
              Actions
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu pull-right" role="menu">
              <li><a href="#"><%= link_to 'My Assets', user_assets_path(user_id: @user)%></a>
              </li>
              <li><a href="#"><%= link_to "Dashbord"%></a>
              </li>
              <li><a href="#">Edit Appointment</a>
              </li>
              <li class="divider"></li>
              <li><a href="#">Separated link</a>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12 col-xs-11">
            <div class="table-responsive">
              <table class="table table-bordered table-hover table-striped">
                <thead>
                  <tr>
                    <th>Owner</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Address</th>
                    <th>Poste Code</th>
                    <th>City</th>
                    <th>Country</th>
                    <th>Asset</th>
                    <th>View</th>
                  </tr>
                </thead>
                <tbody>
                  <% current_user.appointments.each do |app| %>
                  <tr>
                    <td><%= app.asset.user.first_name %></td>
                    <td><%=  app.date %></td>
                    <td><%=  app.created_at %></td>
                    <td><%= app.asset.address %></td>
                    <td><%= app.asset.post_code %></td>
                    <td><%= app.asset.city %></td>
                    <td><%= app.asset.country %></td>
                    <td><%= app.asset.title %></td>
                    <td><%= link_to app.id %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>

            </div>
          </div>
        </div>
      </div>
    </div>

</div>

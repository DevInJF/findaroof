<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2 class="text-center">Sign up</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name, label: 'First Name', required: true, autofocus: true %>
          <%= f.input :last_name, label: 'Last Name', required: true, autofocus: true %>
          <%= f.input :birthdate, label: 'Date of Birth', required: true, autofocus: true, start_year: Date.today.year - 12, end_year: Date.today.year - 100, order: [:day, :month, :year] %>
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

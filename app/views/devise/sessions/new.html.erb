<div class="container-fluid">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 post-form-title-grey">
      <h1 class="findaroof-title">Log in</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 new-asset-grey">

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="row asset-border">
              <div class="col-lg-8 col-lg-offset-2">
              <%= f.input :email, required: false, autofocus: true %>
              </div>
            </div>
            <div class="row asset-border">
              <div class="col-lg-8 col-lg-offset-2">
              <%= f.input :password, required: false %>
              </div>
            </div>
            <div class="row asset-border">
              <div class="col-lg-8 col-lg-offset-2">
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              <%= f.button :submit, "Log in", class: "btn btn-primary" %>
              <%= render "devise/shared/links" %>
              </div>
            </div>
        <% end %>

      </div>
    </div>
  </div>

